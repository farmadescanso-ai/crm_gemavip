<%- include('partials/header', { title: mode === 'edit' ? 'Editar artículo' : 'Nuevo artículo' }) %>

<section class="card">
  <div class="card-hd">
    <h1 class="card-title"><%= mode === 'edit' ? 'Editar artículo' : 'Nuevo artículo' %></h1>
    <p class="card-subtitle">Solo administradores.</p>
  </div>
  <div class="card-bd">
    <% if (error) { %>
      <div style="margin-bottom: 12px; padding: 10px 12px; border:1px solid rgba(255,186,0,.6); border-radius: 12px; background: rgba(255,186,0,.12); font-weight:700;">
        <%= error %>
      </div>
    <% } %>

    <% const itemId = item.Id ?? item.id ?? item.art_id; const itemIdMarca = item.Id_Marca ?? item.art_mar_id; %>
    <form method="post" action="<%= mode === 'edit' ? ('/articulos/' + itemId + '/edit') : '/articulos/new' %>" style="display:grid; gap: 12px; max-width: 720px;">
      <label style="display:grid; gap:6px; font-weight:700;">
        <span>SKU *</span>
        <input class="gv-client-picker__q" name="SKU" value="<%= item.SKU ?? item.art_sku ?? '' %>" maxlength="12" required />
      </label>

      <label style="display:grid; gap:6px; font-weight:700;">
        <span>Nombre *</span>
        <input class="gv-client-picker__q" name="Nombre" value="<%= item.Nombre ?? item.art_nombre ?? '' %>" maxlength="100" required />
      </label>

      <div class="grid cols-2" style="gap: 12px;">
        <label style="display:grid; gap:6px; font-weight:700;">
          <span>Presentación</span>
          <input class="gv-client-picker__q" name="Presentacion" value="<%= item.Presentacion ?? item.art_presentacion ?? '' %>" maxlength="20" />
        </label>
        <label style="display:grid; gap:6px; font-weight:700;">
          <span>Unidades caja</span>
          <input class="gv-client-picker__q" type="number" name="Unidades_Caja" value="<%= item.Unidades_Caja ?? item.art_unidades_caja ?? 1 %>" min="0" step="1" />
        </label>
      </div>

      <div style="font-weight:800; color: var(--gv-ink); font-size:13px; margin-top: 8px;">Dimensiones y logística</div>
      <div class="grid cols-2" style="gap: 12px;">
        <label style="display:grid; gap:6px; font-weight:700;">
          <span>Largo caja (cm)</span>
          <input class="gv-client-picker__q" type="number" name="Largo_Caja" value="<%= item.Largo_Caja ?? item.art_largo_caja ?? 0 %>" min="0" step="1" />
        </label>
        <label style="display:grid; gap:6px; font-weight:700;">
          <span>Alto caja (cm)</span>
          <input class="gv-client-picker__q" type="number" name="Alto_Caja" value="<%= item.Alto_Caja ?? item.art_alto_caja ?? 0 %>" min="0" step="1" />
        </label>
        <label style="display:grid; gap:6px; font-weight:700;">
          <span>Ancho caja (cm)</span>
          <input class="gv-client-picker__q" type="number" name="Ancho_Caja" value="<%= item.Ancho_Caja ?? item.art_ancho_caja ?? 0 %>" min="0" step="1" />
        </label>
        <label style="display:grid; gap:6px; font-weight:700;">
          <span>Peso (kg)</span>
          <input class="gv-client-picker__q" type="number" name="PesoKg" value="<%= item.PesoKg ?? item.art_peso_kg ?? 0 %>" min="0" step="0.01" />
        </label>
        <label style="display:grid; gap:6px; font-weight:700;">
          <span>Cajas por palet</span>
          <input class="gv-client-picker__q" type="number" name="Cajas_Palet" value="<%= item.Cajas_Palet ?? item.art_cajas_palet ?? 0 %>" min="0" step="1" />
        </label>
      </div>

      <div class="grid cols-2" style="gap: 12px;">
        <label style="display:grid; gap:6px; font-weight:700;">
          <span>PVL</span>
          <input class="gv-client-picker__q" type="number" name="PVL" value="<%= item.PVL ?? item.art_pvl ?? 0 %>" min="0" step="0.01" />
        </label>
        <label style="display:grid; gap:6px; font-weight:700;">
          <span>IVA</span>
          <input class="gv-client-picker__q" type="number" name="IVA" value="<%= item.IVA ?? item.art_iva ?? 21 %>" min="0" step="0.01" />
        </label>
      </div>

      <div class="grid cols-2" style="gap: 12px;">
        <label style="display:grid; gap:6px; font-weight:700;">
          <span>Marca</span>
          <select class="gv-client-picker__q" name="Id_Marca">
            <option value="">—</option>
            <% (marcas || []).forEach((m) => { const mid = m.id ?? m.mar_id; %>
              <option value="<%= mid %>" <%= Number(itemIdMarca) === Number(mid) ? 'selected' : '' %>><%= m.nombre ?? m.mar_nombre ?? mid %></option>
            <% }) %>
          </select>
        </label>
        <label style="display:grid; gap:6px; font-weight:700;">
          <span>Activo</span>
          <select class="gv-client-picker__q" name="Activo">
            <option value="1" <%= (item.Activo ?? item.art_activo ?? 1) ? 'selected' : '' %>>Sí</option>
            <option value="0" <%= (item.Activo ?? item.art_activo ?? 1) ? '' : 'selected' %>>No</option>
          </select>
        </label>
      </div>

      <label style="display:grid; gap:6px; font-weight:700;">
        <span>EAN13</span>
        <input class="gv-client-picker__q" name="EAN13" value="<%= item.EAN13 ?? item.art_ean13 ?? '' %>" />
      </label>

      <label style="display:grid; gap:6px; font-weight:700;">
        <span>Imagen (URL o path)</span>
        <input class="gv-client-picker__q" name="Imagen" value="<%= item.Imagen ?? item.art_imagen ?? '' %>" maxlength="255" />
      </label>

      <div style="display:flex; gap:10px; flex-wrap:wrap; margin-top: 6px;">
        <button class="btn secondary" type="submit"><%= mode === 'edit' ? 'Guardar' : 'Crear' %></button>
        <a class="btn secondary" href="<%= mode === 'edit' ? ('/articulos/' + itemId) : '/articulos' %>">Cancelar</a>
      </div>
    </form>
  </div>
</section>

<%- include('partials/footer') %>

